<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="330099" author="Bartek">
        <createTable tableName="patient_appointments">
            <column name="patient_id" type="bigint">
                <constraints foreignKeyName="id"/>
            </column>
            <column name="appointment_id" type="bigint">
                <constraints foreignKeyName="id"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="patient_appointments" baseColumnNames="patient_id" constraintName="patient_appointment_fk" referencedTableName="patient"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="patient_appointments" baseColumnNames="appointment_id" constraintName="appointment_patient_fk" referencedTableName="appointment"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>